<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorPressedHighlight">@color/colorPressedHighlight</item>
        <item name="colorControlHighlight">@color/colorControlHighLight</item>

        <item name="android:actionBarSize">83dp</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="android:editTextStyle">@style/SoloStyle.EditText</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textViewStyle">@style/SoloStyle..TextView</item>
        <item name="android:buttonStyle">@style/SoloStyle.Button</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SoloStyle.EditText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/utm_avo</item>
    </style>

    <style name="SoloStyle..TextView" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/utm_avo</item>
    </style>

    <style name="SoloStyle.Button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/utm_avo</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SoloStyle.Button.Primary">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/utm_avo_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="BottomNavigationItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_nav_item_indicator</item>
        <item name="android:button">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">8sp</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/utm_avo</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/selector_nav_item_text_color</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
